<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.geonetwork.domain.ebrim.informationmodel.core.datatype">

	<class name="LocalizedString" table="LOCALIZED_STRING" lazy="false">
		<comment>LocalizedString</comment>
		<id name="id" type="long" column="ID">
			<generator class="hilo"/>
		</id>
		<component name="lang" class="org.geonetwork.domain.ebrim.informationmodel.core.datatype.Language">
			<property name="value" column="LANGUAGE"/>
		</component>
		<property name="charset" column="CHARSET"/>
		<property name="value" column="VALUE" length="4000"/>
		

	</class>
	

</hibernate-mapping>